import java.util.Scanner;
public class DisplayDigit {
    public static void main(String args[]){
        Scanner sc = new Scanner(System.in);
        System.out.print("Enter any number:");
        int num = sc.nextInt();
        int numCounter = 0;

        for(;num!=0;num/=10 ){
            numCounter++;
        }
        System.out.println("Number of digits are:"+numCounter);

    }
}
